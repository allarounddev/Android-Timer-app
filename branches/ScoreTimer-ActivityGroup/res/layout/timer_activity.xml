<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_horizontal"
  android:background="@drawable/bg_inside">
    
  	<FrameLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/tt_timer">
		
		<com.forixusa.android.controls.ButtonBoldTemplate  
			android:id="@+id/btnShare"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_gravity="center_vertical|right"
			android:background="@drawable/btn_share"
			android:layout_marginTop="5dip"/>
	
	</FrameLayout>
	
	<FrameLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dip"
		android:background="@drawable/bg_time">
		
		<Chronometer 
			android:id="@+id/chrCountTimer"
		    android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textColor="#000000" 
			android:textSize="24dip"			
			android:textStyle="bold"
			android:text="00:00:00"
		    android:layout_gravity="center"/>
		
	</FrameLayout>
	
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginTop="10dip">
	
		<com.forixusa.android.controls.ButtonBoldTemplate  
			android:id="@+id/btnStartReading"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/btn_start_reading"
			android:layout_marginRight="5dip"/>
			
		<com.forixusa.android.controls.ButtonBoldTemplate  
			android:id="@+id/btnStartQuestion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/btn_start_questions"
			android:layout_marginRight="5dip"/>
			
		<com.forixusa.android.controls.ButtonBoldTemplate  
			android:id="@+id/btnDone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/btn_done"/>
	</LinearLayout>
	

	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|right"
		android:layout_marginTop="10dip">
	
		<TextView android:id="@+id/lblTitle" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textSize="16dip"
			android:textStyle="bold"
			android:textColor="#000000"
			android:layout_gravity="center"
			android:text="Number of Questions"/>
				
		<Spinner android:id="@+id/spnNumOfQuestion"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
			android:layout_gravity = "right|center_vertical"
			/>
			
	</LinearLayout>	
	
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|right"
		android:layout_marginTop="10dip">
	
		<TextView android:id="@+id/lblTitle" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textSize="16dip"
			android:textStyle="bold"
			android:textColor="#000000"
			android:layout_gravity="center"
			android:text="Correct Answers"/>
			
		<Spinner android:id="@+id/spnNumOfCorrectAnswer"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
			android:layout_gravity = "right|center_vertical"

			/>    
			
	</LinearLayout>	
	
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginTop="30dip">
	
		<com.forixusa.android.controls.ButtonBoldTemplate  
			android:id="@+id/btnGetResult"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/btn_get_result"
			android:layout_marginRight="5dip"/>
			
		<com.forixusa.android.controls.ButtonBoldTemplate  
			android:id="@+id/btnResetData"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/btn_reset_data"
			android:layout_marginRight="5dip"/>
			
	</LinearLayout>	
	
	
</LinearLayout>