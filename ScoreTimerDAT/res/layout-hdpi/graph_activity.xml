<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_horizontal"
  android:background="@drawable/bg_inside">
    
  	<FrameLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/tt_graph">
		
		<com.forixusa.android.controls.ButtonBoldTemplate  
			android:id="@+id/btnShare"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_gravity="center_vertical|right"
			android:gravity="center_vertical"
			android:background="@drawable/btn_share"/>
	
	</FrameLayout>

	<LinearLayout
	    android:id="@+id/lLGraph"
		android:layout_width="wrap_content"
		android:layout_height="280dip"
		android:layout_margin="10dip"
		android:layout_marginTop="10dip"
		android:background="@drawable/bg_graph"
		/>


	<RadioGroup
	    android:id="@+id/rdgResult"
	    android:layout_marginTop="5dip"
	  	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:orientation="horizontal"
	   	android:layout_marginLeft="10dip"
	   	android:layout_marginRight="10dip"
	   	android:gravity="center_horizontal"
	   	>
	   	<RadioButton
		    android:id="@+id/rdbAccuracy"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Accuracy"
		    android:textSize="12dip"
		    android:textColor="#000000"
		    android:layout_marginRight="10dip"/>
	   	<RadioButton
		    android:id="@+id/rdbPace"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Pace"
		    android:textSize="12dip"
		    android:textColor="#000000"
		    android:layout_marginRight="10dip" />
	   	<RadioButton
		    android:id="@+id/rdbEstimatedScore"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Estimate Score"
		    android:textSize="12dip"
		    android:textColor="#000000" />
 	</RadioGroup>
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:background = "@color/line_color"
		android:layout_marginLeft="25dip"
	   	android:layout_marginRight="20dip"
	   	android:gravity="center_horizontal"
	/>
	<RadioGroup
	    android:id="@+id/rdgShow"
	    android:layout_marginTop="5dip"
	  	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:orientation="horizontal"
	   	android:layout_marginLeft="10dip"
	   	android:layout_marginRight="10dip"
	   	android:gravity="center_horizontal">
	   	<RadioButton
		    android:id="@+id/rdbLast10Tests"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Last 10 Tests"
		    android:textSize="12dip"
		    android:textColor="#000000"
		    android:layout_marginRight="10dip" />
	   	<RadioButton
		    android:id="@+id/rdbLast20Tests"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Last 20 Tests"
		    android:textSize="12dip"
		    android:textColor="#000000"
			android:layout_marginRight="10dip"/>
	   	<RadioButton
		    android:id="@+id/rdbAll"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="All"
		    android:textSize="12dip"
		    android:textColor="#000000" />
 	</RadioGroup>
	
</LinearLayout>